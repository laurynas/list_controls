list_controls
=============

Simple list filtering & sorting for Rails controller.


Example
=======

Controller:

  class ProductsController < ApplicationController
    
    can_filter_and_sort
  
    def default_filters
      { 'state' => 'new' } 
    end
  
    def index
      @products = Product.all :conditions => {
        :state        => @filters.state
      } 
    end
  
  end


View:

  <div id="filters">
    <%= form_for :filters, @filters, :html => { :method => :get } do |f| %>
    
      <%= f.label :state %>
      <%= f.select :state, states_for_filter %>
    
    <% end %>
  </div>

  <table>
    <tr>
      <th><%= sort @filters, :by => :id %></th>
      <th><%= sort @filters, :by => :title, :as => t(:product_title) %></th>
      <th><%= sort @filters, :by => :state, :as => t(:state) %></th>
    </tr>
    
    <% for product in @products %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.state %></td>
      </tr>
    <% end %>    
  </table>


